{
  "name": "var_pred_drop06",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 22050
  },
  "arch": {
    "type": "FastSpeech2",
    "args": {
      "num_layers": 4,
      "hidden_size": 256,
      "num_heads": 2,

      "fft_conv1d_filter_size": 1024,
      "fft_conv1d_kernel": [9, 1],
      "fft_conv1d_padding": [4, 0],

      "variance_predictor_filter_size": 256,
      "variance_predictor_dropout": 0.6,
      "n_bins": 256,
      "duration_control": 1.0,
      "pitch_control": 1.0,
      "energy_control": 1.0,

      "vocab_size": 300,
      "max_seq_len": 3000,
      "n_mels": 80,
      "pad_id": 0,
      "dropout": 0.1
    }
  },
  "data": {
    "train": {
      "batch_size": 48,
      "num_workers": 8,
      "datasets": [
        {
          "type": "LJspeechDataset",
          "args": {"part": "train"}
        }
      ]
    },
    "val": {
      "batch_size": 48,
      "num_workers": 8,
      "datasets": [
        {
          "type": "LJspeechDataset",
          "args": {"part": "dev"}
        }
      ]
    }
  },
  "text_encoder": {
    "type": "TextEncoder",
    "args": {}
  },
  "vocoder": {
    "type": "WaveGlow",
    "args": {}
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 3e-4
    }
  },
  "loss": {
    "type": "FastSpeechLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "MelMSE",
      "args": {
        "name": "mel_mse"
      }
    },
    {
      "type": "DurationMSE",
      "args": {
        "name": "duration_mse"
      }
    },
    {
      "type": "PitchMSE",
      "args": {
        "name": "pitch_mse"
      }
    },
    {
      "type": "EnergyMSE",
      "args": {
        "name": "energy_mse"
      }
    }
  ],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 500,
      "gamma": 0.95
    }
  },
  "trainer": {
    "epochs": 1000,
    "len_epoch": 100,
    "log_step": 100,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,

    "monitor": "min val_loss",
    "early_stop": 100,

    "visualize": "wandb",
    "wandb_project": "dla_hw3",
    "wandb_run_id_to_resume": null,

    "grad_norm_clip": 10
  }
}
